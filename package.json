{
  "name": "little-store",
  "version": "0.0.0-semantic-release",
  "description": "Super simple curried storage in a given plain object when you just must have mutable state",
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "bugs": "https://github.com/bahmutov/little-store/issues",
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": [
        "npm test"
      ],
      "pre-push": [
        "npm run size",
        "npm run secure"
      ],
      "post-commit": [],
      "post-merge": []
    }
  },
  "files": [
    "index.js",
    "src/*.js",
    "!src/*-spec.js"
  ],
  "homepage": "https://github.com/bahmutov/little-store#readme",
  "keywords": [
    "curried",
    "mutable",
    "object",
    "state",
    "store",
    "utility"
  ],
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/little-store.git"
  },
  "scripts": {
    "format": "standard-format -w index.js src/*.js",
    "issues": "git-issues",
    "lint": "standard --verbose index.js src/*.js",
    "pretest": "npm run format && npm run lint",
    "secure": "nsp check",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";",
    "test": "npm run unit",
    "unit": "ls; NODE_PATH=.. mocha src/*-spec.js",
    "commit": "commit-wizard",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "check-all": "TEST_LIMIT=1 autochecker --verbose"
  },
  "devDependencies": {
    "git-issues": "1.2.0",
    "lazy-ass": "1.4.0",
    "mocha": "2.5.3",
    "nsp": "2.5.0",
    "pre-git": "3.9.1",
    "semantic-release": "6.3.0",
    "standard": "7.1.2",
    "standard-format": "2.2.1"
  },
  "dependencies": {
    "check-more-types": "2.21.0",
    "lodash.curry": "4.0.1"
  }
}
